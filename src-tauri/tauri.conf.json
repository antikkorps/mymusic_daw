{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyMusic DAW",
  "version": "0.5.1",
  "identifier": "com.mymusic.daw",
  "build": {
    "frontendDist": "../ui/build/client",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd /Users/franck/Documents/mymusic_daw/ui && npm run dev",
    "beforeBuildCommand": "cd /Users/franck/Documents/mymusic_daw/ui && npm run build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "A Digital Audio Workstation built with Rust and Tauri",
    "longDescription": "MyMusic DAW is a professional digital audio workstation featuring real-time audio processing, MIDI support, plugin hosting (CLAP), and a modern React-based interface.",
    "category": "Audio",
    "copyright": "Copyright 2024"
  },
  "app": {
    "windows": [
      {
        "title": "MyMusic DAW",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'"
    }
  },
  "plugins": {}
}
